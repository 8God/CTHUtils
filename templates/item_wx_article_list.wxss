.item {
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  border-radius: 12rpx;
  box-shadow: 6rpx 6rpx 6rpx 6rpx #eee;
}

.article_image {
  border-top-left-radius: 12rpx;
  border-top-right-radius: 12rpx;
  width: 100%;
  height: 500rpx;
}

.text_title {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 16px;
  color: #e7475e;
  margin-left: 22rpx;
  margin-right: 22rpx;
  margin-top: 22rpx;
}

.text_subtitle {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 12px;
  color: #999;
  margin-left: 22rpx;
  margin-right: 22rpx;
  margin-top: 18rpx;
}

.text_pubtime {
  font-size: 14px;
  color: #666;
  margin-left: 22rpx;
  margin-right: 22rpx;
  margin-top: 18rpx;
}

.text_hitcount {
  font-size: 14px;
  color: #666;
  margin-left: 22rpx;
  margin-right: 22rpx;
  margin-top: 18rpx;
}

.article_extra_info {
  padding: 22rpx;
  display: flex;
  flex-direction: row;
}
